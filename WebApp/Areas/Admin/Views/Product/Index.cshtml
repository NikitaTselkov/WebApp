@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
               <i class="bi bi-plus-circle"></i> &nbsp;  Create New Product
            </a>
        </div>
    </div>

    <br />

    <table class="table table-boarder table-striped" style="width:100%">
        <thead>
            <tr>
                <th> Product Name </th>
                <th> ISBN </th>
                <th> Price </th>
                <th> Author </th>
                <th> Category </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model) 
            {
            <tr>
                <td> @obj.Title </td>
                <td> @obj.ISBN </td>
                    <td> @obj.ListPrice </td>
                <td> @obj.Author </td>
                <td>  </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Product" asp-action="Upsert" asp-route-id="@obj.Id"
                        class="btn btn-primary mx-2">Edit</a>
                        <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2">Delete</a>
                    </div>

                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
